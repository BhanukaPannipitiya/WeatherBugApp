<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Colors -->
    <color name="background_color">#F5F5F5</color>
    <color name="text_color">#3A3A3A</color>
    <color name="primary_color">#4CAF50</color>
    <color name="accent_color">#FFE500</color>
    <color name="card_background_color">#3D3F45</color>
    <!-- Styles -->

    <!-- Header Text Style -->
    <style name="HeaderText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
        <!-- Add other attributes as needed -->
    </style>

    <!-- Search Input Field Style -->
    <style name="SearchInputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <!-- Add other attributes as needed -->
    </style>

    <!-- Weather Icon Style -->
    <style name="WeatherIcon">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_gravity">center</item>
        <!-- Add other attributes as needed -->
    </style>

    <!-- Body Text Style -->
    <style name="BodyText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <!-- Add other attributes as needed -->
    </style>

    <!-- Temperature Text Style -->
    <style name="TempText">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">8dp</item>
        <!-- Add other attributes as needed -->
    </style>

    <!-- Primary Button Style -->
    <style name="PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <!-- Add other attributes as needed -->
    </style>

    <!-- CardView Style -->
    <style name="CardViewStyle">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">155dp</item>
        <item name="cardBackgroundColor">@color/card_background_color</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <!-- Add other attributes as needed -->
    </style>

</resources>
